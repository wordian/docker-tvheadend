#!/bin/sh
# tv_grab_file for epg2xml
# source: https://github.com/nurtext/tv_grab_file_synology
DESC="Korea (epg2xml)"
VER="0.1"
CAP="baseline"
EPG2XML_SCRIPT="/epg2xml/epg2xml.php"

for arg
do
    delim=""
    case "$arg" in
    #translate --gnu-long-options to -g (short options)
       --description) printf "%s\n" "$DESC";;
       --version) printf "%s\n" "$VER";;
       --capabilities) printf "%s\n" "$CAP";;
       -d) shift;;
       #pass through anything else
       *) [[ "${arg:0:1}" == "-" ]] || delim="\""
           args="${args} ${arg} ";;
    esac
done

if [ -z "$args" ]; then
    exit 0
fi

if [ -f $EPG2XML_SCRIPT ]; then
    php7 -f $EPG2XML_SCRIPT -- $args
    cat /epg2xml/xmltv.xml
fi

exit 0
